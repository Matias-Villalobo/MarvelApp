<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadingBarStyle">
        <item name="android:layout_height">@dimen/loading_bar_text_height</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="LinearStyle">
        <item name="android:paddingStart">@dimen/linear_padding_start</item>
        <item name="android:paddingEnd">@dimen/linear_padding_end</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_small_8</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_size</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_margin">@dimen/title_margin_size</item>
    </style>

    <style name="Letters">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/bullet_text_size</item>
        <item name="android:layout_margin">@dimen/title_margin_size</item>

    </style>
</resources>
